<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white">

    <!-- Profile Section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_circle" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- User Name -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/text_gray"
                android:textSize="24sp"
                tools:text="Ak" />

            <!-- Lessons and League -->
            <TextView
                android:id="@+id/lessons_and_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_semibold"
                android:text="0 LESSONS | BLUE LEAGUE"
                android:textColor="@color/light_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Stats Section -->
    <LinearLayout
        android:id="@+id/stats_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_section">

        <!-- Streak Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_bg_14"
            android:backgroundTint="@color/light_yellow"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="62dp">

            <TextView
                android:id="@+id/streak_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_semibold"
                android:text="0"
                android:textColor="@color/primary"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/gilroy_semibold"
                android:text="STREAK"
                android:textColor="@color/primary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Gems Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button_bg_14"
            android:backgroundTint="@color/lavender_light"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="62dp">

            <TextView
                android:id="@+id/gems_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_semibold"
                android:text="0"
                android:textColor="#B38AFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/gilroy_semibold"
                android:text="GEMS"
                android:textColor="#B38AFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Total Stars Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/primary_button_bg_14"
            android:backgroundTint="#ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="62dp">

            <TextView
                android:id="@+id/stars_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_semibold"
                android:text="0"
                android:textColor="@color/primary_yellow"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/gilroy_semibold"
                android:text="TOTAL STARS"
                android:textColor="@color/primary_yellow"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Vocabulary Section -->
    <LinearLayout
        android:id="@+id/vocabulary_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_section">

        <!-- Vocabulary Title -->
        <TextView
            android:id="@+id/vocabulary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="My vocabulary"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- Words Used Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/words_used_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total words I used"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/words_used_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0" />
        </LinearLayout>

        <!-- Weekly Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dec 18-24"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dec 24-30"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dec 30-Jan 5"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Jan 6-12"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Daily Words Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daily_words_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Achievements"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>