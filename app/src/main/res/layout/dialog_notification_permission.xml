<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/gilroy_semibold"
        android:text="Enable Notifications"
        android:textColor="@color/secondary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvNotificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Boost your English learning journey with personalized AI lessons, tips, and updates. Enable notifications to stay in the loop."
        android:textColor="@color/secondary"
        android:textSize="16sp" />

    <!-- Cat Button: Primary action styled as a TextView -->
    <TextView
        android:id="@+id/tvAllowNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/primary_button_bg_14"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="center"
        android:padding="12dp"
        android:text="Allow Notifications"
        android:textColor="@color/secondary"
        android:textSize="16sp" />

    <!-- Maybe Later: Smaller secondary clickable text -->
    <TextView
        android:id="@+id/tvMaybeLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="center"
        android:text="Maybe Later"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

</LinearLayout>